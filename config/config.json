{
    "batch_size": 64,
    "num_workers": 4,
    "embedding_dim": 256,
    "d_input": 32,
    "event_length": 128,
    "n_layers": 8,
    "n_heads": 4,
    "output_dim": 3,
    "n_epochs": 200,
    "patience": 200,
    "dropout": 0.01,
    "attention": "scaled_dot",
    "N_events_nu_e": 20000,
    "N_events_nu_mu": 20000,
    "N_events_nu_tau": 20000,
    "frac_train": 0.7,
    "frac_val": 0.2,
    "frac_test": 0.1,
    "gpu": [0],
    "optimizer": {
        "pct_start": 0.025,
        "lr_max": 1e-4,
        "div_factor": 3e2,
        "final_div_factor": 10,
        "betas": [0.9, 0.999],
        "eps": 1e-8,
        "weight_decay": 0,
        "amsgrad": true, 
        "base_momentum": 0.85,
        "max_momentum": 0.95,
        "anneal_strategy": "cos",
        "interval": "step",
        "frequency": 1
    },
    "verna_scheduler": {
        "lr_max": 1e-4,
        "lr_min": 1e-6,
        "n_sections": 8,
        "frequency_per_section":4,
        "lr_decay": "exponential"
    },
    "katsura_scheduler": {
        "first_cycle_steps":26000,
        "cycle_mult": 1.0,
        "max_lr": 1e-4,
        "min_lr": 3e-7,
        "warmup_steps": 2000,
        "gamma": 0.66,
    }
}
