{
    "batch_size": 128,
    "num_workers": 4,
    "embedding_dim": 512,
    "d_input": 35,
    "event_length": 256,
    "inference_event_length": 2048,
    "n_layers": 10,
    "n_heads": 8,
    "n_output_layers": 8,
    "n_epochs": 50,
    "patience": 100,
    "dropout": 0.01,
    "attention": "xformers",
    "positional_encoding": "absolute",
    "N_events_nu_e": 100000, 
    "N_events_nu_mu": 100000,
    "N_events_nu_tau": 100000,
    "N_events_noise": 0,
    "frac_train": 0.7,
    "frac_val": 0.2,
    "frac_test": 0.1,
    "classification_mode": "Multiflavour",
    "gpu": [0],
    "optimizer": {
        "lr_max": 2e-4,
        "betas": [0.9, 0.999],
        "eps": 1e-8,
        "weight_decay": 0,
        "amsgrad": true, 
        "interval": "step",
        "frequency": 1
    },
    "one_cycle_scheduler":{
        "pct_start": 0.1,
        "lr_max": 2e-4,
        "div_factor": 10,
        "final_div_factor": 25,
        "anneal_strategy": "cos",
        "base_momentum": 0.85,
        "max_momentum": 0.95
    }
}
