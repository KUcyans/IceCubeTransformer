{
    "batch_size": 64,
    "num_workers": 4,
    "embedding_dim": 512,
    "d_input": 35,
    "event_length": 128,
    "n_layers": 10,
    "n_heads": 8,
    "output_dim": 3,
    "n_epochs": 50,
    "patience": 50,
    "dropout": 0.01,
    "attention": "innocent",
    "N_events_nu_e": 100000,
    "N_events_nu_mu": 100000,
    "N_events_nu_tau": 100000,
    "frac_train": 0.7,
    "frac_val": 0.2,
    "frac_test": 0.1,
    "gpu": [0],
    "optimizer": {
        "pct_start": 0.08,
        "lr_max": 1e-4,
        "div_factor": 1e2,
        "final_div_factor": 10,
        "betas": [0.9, 0.999],
        "eps": 1e-8,
        "weight_decay": 0,
        "amsgrad": true, 
        "base_momentum": 0.85,
        "max_momentum": 0.95,
        "anneal_strategy": "cos",
        "interval": "step",
        "frequency": 1
    }
}
